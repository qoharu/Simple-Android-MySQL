<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="muhammad.salman.App1">

    <TextView
        android:id="@+id/text_tabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama Tabel:"
        android:textAlignment="center"
        android:textSize="20dp"
        />
    <EditText
        android:id="@+id/edit_formtabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_below="@+id/text_tabel"

        />
    <Button
        android:id="@+id/btn_createdb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_formtabel"
        android:text="CREATE DATABASE"
        />
    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_createdb"
        android:text="NEXT"
        />
</RelativeLayout>
